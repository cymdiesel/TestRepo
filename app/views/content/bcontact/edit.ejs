<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <input type="hidden" name="id" value="<%= contact._id %>" >
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter Name"
                    name="name" 
                    value="<%= contact.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="emailTextField">Email</label>
                    <input type="email" class="form-control"
                    id="emailTextField"
                    placeholder="Enter the Email"
                    name="email" 
                    value="<%= contact.email %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">Phone</label>
                    <input type="number" class="form-control"
                    id="publishedTextField"
                    placeholder="Enter the Phone Number"
                    name="phone" 
                    value="<%= contact.phone %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextArea">Business Title</label>
                    <input type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter their Business Title"
                    name="title"                     
                    value="<%= contact.title %>"
                    required
                    >
                    </input>
                </div>

                <div class="form-group">
                    <label for="priceTextField">Company</label>
                    <input type="text" class="form-control"
                    id="priceTextField"
                    placeholder="Enter the Company"
                    name="company" 
                    value="<%= contact.company %>"
                    required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/contact-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>