<div class="'container">
    <h1>Contact List</h1>
    <a href="/contact-add" class="btn btn-primary" role="button">
        <i class="fas fa-plus-circle"></i> Add a Contact</a>
    <div class="row">
        <div class="col">
            <table id="contactTable" class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="'text-center">#</th>
                        <th scope="col" onclick="sortTable(0)">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                        <th scope="col" onclick="sortTable(1)">Title</th>
                        <th scope="col">Company</th>
                    </tr>
                </thead>
                <tbody id="contactList">
                    <!-- Repeatable Rows -->
                    <% for(let count = 0; count < contact.length; count++) { %>
                        <tr>
                            <th scope="row" class="text-center"><%= count + 1 %></th>
                            <td><%= contact[count].name %></td>
                            <td><%= contact[count].email %></td>
                            <td><%= contact[count].phone %></td>
                            <td><%= contact[count].title %></td>
                            <td><%= contact[count].company %></td>
                            
                           <td class="text-center col-1">
                                <a href="/contact-edit/<%= contact[count]._id %>"
                                    class="btn btn-primary btn-sm">
                                    <i class="fas fa-pencil-alt"></i> Edit</a>
                            </td>
                            
                            <td class="text-center col-1">
                                <a href="/contact-delete/<%= contact[count]._id %>"
                                    class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> Delete</a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>